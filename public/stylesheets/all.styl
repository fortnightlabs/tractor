yellow = hsla(60, 80%, 80%, 0.9)

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

body, input
  font-family helvetica neue, helvetica, arial, sans-serif
  font-size medium

h1, h2, h3
  font-weight 300

body.-projects

body.-items
  ul.items
    padding 0
    > li
      display inline

  table.hour
    table-layout fixed
    font-size small
    border-collapse collapse
    margin-bottom 1em
    width 800px
    tr:nth-child(odd)
      background-color hsl(0, 0%, 95%)
    tr.group
      color #999
    tr.selected
      background-color yellow
    tr.cursor
      background-color hsl(0, 0%, 20%)
      color white
      text-shadow 0 -1px 0 hsla(0, 0%, 0%, 0.5)
      &.selected
        background-color hsl(60, 50%, 20%)
    th
      text-align left
      background-color hsl(0, 0%, 50%)
      color white
      text-shadow 0 -1px 0 hsla(0, 0%, 0%, 0.5)
      padding 5px
      &.project
        width 8em
      &.checkbox
        width 2em
      &.hour
        width 9em
      &.duration
        width 5em
      &.app
        width 10em
    td
      padding 3px 5px
    .duration
      text-align right
      white-space nowrap
    div.title
      width 100%
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
  .totals
    font-size small
    dl, dt, dd
      display inline
    dt
      margin-left 1em
    dd
      margin-left 1ex
